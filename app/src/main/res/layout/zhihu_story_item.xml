<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardBackgroundColor="@color/material_white"
    app:cardCornerRadius="5dp"
    app:cardElevation="3dp">

    <RelativeLayout
        android:id="@+id/news_parent_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/story_thumbnail"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_margin="10dp"
            app:actualImageScaleType="fitXY"
            app:failureImage="@drawable/default_thumbnail"
            app:placeholderImage="@drawable/default_thumbnail"
            app:placeholderImageScaleType="fitXY"/>

        <TextView
            android:id="@+id/story_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:layout_toStartOf="@id/story_thumbnail"
            android:ellipsize="end"
            android:maxLines="3"
            android:textColor="@color/material_textBlack_text"
            android:textSize="@dimen/textSize17"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>